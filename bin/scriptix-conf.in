#!/bin/sh

case "$1" in
	--cflags)
		# cc should like in /usr/local and /usr for include files
		if test '@prefix@' != '/usr' && test '@prefix@' != '/usr/local' ; then
			echo '-I@prefix@/include'
		fi
		;;
	--lflags)
		echo '-L@prefix@/lib'
		;;
	--libs)
		echo '-lscriptix -lsxparse'
		;;
	--version)
		echo '@VERSION@'
		;;
	--check)
		set "VER" `echo "$2" | sed 's/\./ /g'`
		SX_MAJOR="$2"
		SX_MINOR="$3"
		SX_REV="$4"
		set "VER" `echo '@VERSION@' | sed 's/\./ /g'`
		if test "$2" != "$SX_MAJOR" || test "$3" != "$SX_MINOR" || test "x$4" != "x$SX_REV"; then
			exit 1
		fi
		;;
	--help)
		echo "Help: $0"
		echo
		echo '  --cflags   Print compilation flags'
		echo '  --lflags   Print linker flags'
		echo '  --libs     Print library flags'
		echo '  --version  Print version'
		echo '  --help     This list'
		echo
		exit 1
		;;
	*)
		exit 0
		;;
esac

exit 0
