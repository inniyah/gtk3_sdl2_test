fact (arg) {
	if (!arg || arg <= 1)
		return 1;
	else
		return fact (arg - 1) * arg;
}

public
main (&argv) {
	if (argv.length () != 1)
		max = 10000;
	else
		max = argv[0].to_num ();

	num = 0;
	while ((f = fact (num + 1)) <= max)
		num ++;

	printl ('Smallest factorial within ', max, ': fact(', num, ') = ', fact (num));
}
