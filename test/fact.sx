fact (arg) {
	if (!arg || arg == 1)
		return 1;
	else 
		return arg * fact (arg - 1);
}

main (&argv) {
	if (argv.length () != 1) {
		printl ('Usage: fact.sx <value>');
		return;
	}

	max = argv[0].to_num ();

	num = 0;
	while (fact (num + 1) <= max)
		num ++;

	printl ('Smallest factorial within ', max, ': fact(', num, ') = ', fact (num));
}
