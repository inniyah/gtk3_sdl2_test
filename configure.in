AC_INIT(bin/scriptix.c)
AC_CONFIG_HEADER(include/config.h)

BASE_VERSION=0.19
VERSION=0.19
AC_SUBST(VERSION)
AC_SUBST(BASE_VERSION)
AC_DEFINE_UNQUOTED(SX_VERSION,"$VERSION")

AC_PROG_CC

AC_CHECK_FUNC(snprintf)
AC_CHECK_FUNC(strcasecmp)
AC_CHECK_FUNC(strdup)

if test "$CC" = "gcc" ; then 
	CFLAGS="$CFLAGS -Wall"
	AC_SUBST(CFLAGS)
fi

AC_OUTPUT(
	Makefile
	lib/Makefile
	bin/Makefile
	deb/Makefile
	deb/control
	scriptix-conf
	scriptix.spec
)

chmod +x scriptix-conf
